<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_scrolling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ScrollingActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:gravity="start|top"
                android:ems="10"
                android:id="@+id/tripInfoField" android:editable="false" android:singleLine="false"
                android:text="@string/no_trip_message" android:textAlignment="center" android:textSize="24sp"
                android:textStyle="bold"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Date:"
                    android:ems="10"
                    android:id="@+id/dateLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/dateField" android:layout_weight="1" android:editable="false"
                    android:enabled="false" tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Time:"
                    android:ems="10"
                    android:id="@+id/timeLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="time"
                    android:ems="10"
                    android:id="@+id/timeField" android:layout_weight="1" android:editable="false"
                    android:enabled="false" tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/purple_200"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="12dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:background="@android:color/white"
                        android:layout_centerHorizontal="true"
                        android:text="Fish"
                        android:textSize="20sp"
                        android:textColor="#9C27B0"
                        android:textStyle="bold"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Species:"
                    android:ems="10"
                    android:id="@+id/speciesLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/speciesField" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Length:"
                    android:ems="10"
                    android:id="@+id/lengthLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Weight:"
                    android:ems="10"
                    android:id="@+id/weightLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/purple_200"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="12dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:background="@android:color/white"
                        android:layout_centerHorizontal="true"
                        android:text="Lure"
                        android:textSize="20sp"
                        android:textColor="#9C27B0"
                        android:textStyle="bold"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Lure:"
                    android:ems="10"
                    android:id="@+id/lureLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Lure / Rig Type:"
                    android:ems="10"
                    android:id="@+id/lureTypeLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Lure Brand / Model:"
                    android:ems="10"
                    android:id="@+id/lureBrandLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Lure Color:"
                    android:ems="10"
                    android:id="@+id/lureColorLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Lure Size:"
                    android:ems="10"
                    android:id="@+id/lureSizeLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Trailer:"
                    android:ems="10"
                    android:id="@+id/trailerLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Trailer Color:"
                    android:ems="10"
                    android:id="@+id/trailerColorLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Trailer Size:"
                    android:ems="10"
                    android:id="@+id/trailerSizeLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/purple_200"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="12dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:background="@android:color/white"
                        android:layout_centerHorizontal="true"
                        android:text="Environment"
                        android:textSize="20sp"
                        android:textColor="#9C27B0"
                        android:textStyle="bold"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Depth:"
                    android:ems="10"
                    android:id="@+id/depthLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Air Temp:"
                    android:ems="10"
                    android:id="@+id/airTempLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Water Temp:"
                    android:ems="10"
                    android:id="@+id/waterTempLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Wind:"
                    android:ems="10"
                    android:id="@+id/windLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Water Clarity:"
                    android:ems="10"
                    android:id="@+id/waterClarityLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Structure:"
                    android:ems="10"
                    android:id="@+id/structureLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Cover:"
                    android:ems="10"
                    android:id="@+id/coverLabel" android:layout_weight="1" tools:ignore="TouchTargetSizeCheck"
                    android:editable="false"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>